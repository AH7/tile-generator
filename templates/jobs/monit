{% if not errand %}
check process {{ package.name }}
  with pidfile /var/vcap/sys/run/{{ package.name }}/{{ package.name }}.pid
  start program "/var/vcap/jobs/{{ package.name }}/bin/{{ package.name }}_ctl start'"
  stop program "/var/vcap/jobs/{{ package.name }}/bin/{{ package.name }}_ctl stop'"
  group vcap
{% endif %}
