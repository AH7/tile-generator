#!/bin/bash

set -e # exit immediately if a simple command exits with a non-zero status
set -u # report the usage of uninitialized variables

# Setup env vars and folders for the webapp_ctl script

export PORT=${PORT}
export LANG=en_US.UTF-8

case $1 in

  start)
    pid_guard $PIDFILE $JOB_NAME

    # store pid in $PIDFILE
    echo $$ > $PIDFILE

    docker_host=unix:///var/vcap/sys/run/docker/docker.sock

    set -x # print commands
    for image in /var/vcap/packages/{{package.name}}/*.tgz; do
      echo "Loading docker image {{ package.image }}" >>$LOG_DIR/{{package.name}}.stdout.log
      docker --host $docker_host \
           load -i $image \
             >>$LOG_DIR/{{package.name}}.stdout.log \
             2>>$LOG_DIR/{{package.name}}.stderr.log
    done

    # do nothing forever
    exec tail -f /dev/null
    ;;

  stop)
    kill_and_wait $PIDFILE

    ;;
  *)
    echo "Usage: install_ctl {start|stop}"

    ;;

esac
exit 0
